<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/imgPrincipal"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:src="@drawable/ic_mate"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="130sp"
            android:text="Conociendo las operaciones Aritmenticas"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btnConoceSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Conoce la suma"
        />
    <Button
        android:id="@+id/btnConoceResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Conoce la resta"
        />
</LinearLayout>

    <Button
        android:id="@+id/btnConoceMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Conoce la multi"
        />

    <Button
        android:id="@+id/btnConoceDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Conoce la division"
        />


</LinearLayout>

 