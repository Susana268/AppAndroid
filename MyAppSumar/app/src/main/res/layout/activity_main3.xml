<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/txtTextoA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65sp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="Mayor de Edad"
        />
    <TextView
        android:id="@+id/txtValor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="50sp"
        android:textSize="25sp"
        android:text="Factor 1"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtTextoA"
        />

    <TextView
        android:id="@+id/txtMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginLeft="50sp"
        android:textSize="25sp"
        android:text="*"
        android:layout_centerInParent="true"
        android:layout_below="@id/txtTextoA"
        />

    <TextView
        android:id="@+id/txtValor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:layout_marginRight="50sp"
        android:textSize="25sp"
        android:text="Factor 2"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtTextoA"
        />

    <EditText
        android:id="@+id/txtResMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        android:hint="Ingrese Resultado"
        android:inputType="number"
        android:layout_below="@id/txtValor4"
        />

    <ImageView
        android:id="@+id/imgCamion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camion"
        android:layout_margin="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtResMulti"
        />
    <Button
        android:id="@+id/btnMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCamion"
        android:layout_alignParentRight="true"
        android:layout_margin="15sp"
        android:textColor="@color/white"
        android:text="Combrobar Resultado"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btnRetMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCamion"
        android:layout_alignParentLeft="true"
        android:layout_margin="15sp"
        android:textColor="@color/white"
        android:text="Retornar"
        android:onClick="onClick"
        />

</RelativeLayout>