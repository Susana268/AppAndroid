<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:gravity="center"
        android:layout_marginTop="65sp"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/valor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        android:hint="Ingrese Primer Valor"
        android:inputType="text"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor1"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="15sp"
        android:hint="Ingrese Segundo Valor"
        android:inputType="text"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="::::"
        android:layout_below="@id/valor2"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="40sp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultado"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        android:text="Suma"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultado"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:text="Resta"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btnMultiplica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSuma"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:text="Multiplica"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnResta"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:text="Divide"
        android:onClick="onClick"
        />

</RelativeLayout>